    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PAT_MRN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Provider_1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact_Date)
        </th>
