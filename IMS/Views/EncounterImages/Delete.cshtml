@model IMS.Models.EncounterImage

@{
    ViewBag.Title = "Delete";
}

<style>
    .myactionlink:hover {
        color: black;
    }

    .myactionlink {
        color: white;
    }

    .myactionlink {
        border: double
    }

    .myactionlink {
        background-color: forestgreen
    }

    .myactionlink {
        padding-left: 5px
    }

    .myactionlink {
        padding-right: 5px
    }

    .myactionlink {
        padding-top: 5px
    }

    .myactionlink {
        padding-bottom: 5px
    }
</style>

<h3>Are you sure you want to delete this image?</h3>
<div>
    <hr />
    <dl class="dl-horizontal-lg">
        
        <dt>
            @{
                string imreBase64Data = Convert.ToBase64String(Model.Image_Data);
                string imgDataURL = string.Format("data:image/png;base64,{0}", imreBase64Data);
            }
            <img src="@imgDataURL" width="250" height="250" />
        </dt>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", "EncounterImages", new { @class = "btn btn-primary" })
        </div>
    }
</div>